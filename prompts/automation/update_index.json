{
  "task": "update_project_index",
  "description": "Automatically update index.llm.txt with current project structure and status",
  "load_context_files": [
    "prompts/ai_handoff.txt",
    "prompts/project/principle.llm.txt"
  ],
  "protocol_context": [
    "prompts/protocol/analysis_log_behavior.llm.txt"
  ],
  "target_file": "index.llm.txt",
  "requirements": {
    "scan_directories": [
      "prompts/",
      "functions/",
      "/"
    ],
    "update_sections": [
      "FOLDER_STRUCTURE",
      "CURRENT_STATUS", 
      "NEXT_PRIORITIES",
      "FILE_MAINTENANCE"
    ],
    "maintain_format": "AI_consultation_friendly",
    "auto_timestamp": true,
    "preserve_existing_content": true
  },
  "execution_rules": {
    "always_run": true,
    "run_frequency": "every_session",
    "log_changes": "prompts/log/index_updates_YYYYMMDD.txt",
    "validation": "check_folder_existence_before_documenting"
  },
  "output_instructions": {
    "keep_concise": "focus_on_structure_and_purpose",
    "ai_friendly_language": "clear_for_consultation",
    "include_usage_guidance": "how_other_AI_should_use_this_info"
  }
}